<div id="recipe">
  <h1><%= @recipe.recipe_name %></h1>
  <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
  <%= link_to 'Delete recipe', (@recipe),
        method: :delete,
        confirm: "Are you sure you want to delete this recipe?" %> |
  <%= link_to 'Back', '/' %>
</div>

<div id="ingredients">
  <h2>Ingredients</h2>
    <% @recipe.ingredients.each do |ingredient| %>
      <tr><td><%= ingredient.quantity %></td> <td><%= ingredient.ingredient_name %></td>
        <%= link_to 'Delete', [@recipe, ingredient],
              method: :delete,
              confirm: "Are you sure you want to delete this ingredient?" %> </br>
    <% end %>
  <h3>Add Ingredients</h3>
  <%= render "ingredients/form" %>
</div>

  <h2>Directions</h2>
  <div id='directions'>
    <% @recipe.directions.order("ordinality ASC").each do |direction| %>
      <tr><td colspan=2><%= direction.body %></td></tr>
          <%= link_to 'Edit', [:edit, @recipe, direction] %>
          <%= link_to 'Delete', [@recipe, direction],
              method: :delete,
              confirm: "Are you sure you want to delete this direction?" %> </br>
    <% end %>
    <h3>Add Directions</h3>
    <%= render "directions/form" %>
  </div>
