<%= form_for [@recipe, Ingredient.new] do |f| %>
  <div class="field">
    <%= f.label :ingredient_name %><br />
    <%= f.text_field :ingredient_name %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
